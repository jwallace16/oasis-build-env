{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 16,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON",
                "BUILD_PYTHON_BINDINGS": "ON",
                "BUILD_EXAMPLES": "ON"
            },
            "environment": {
                "SPICE_ROOT": "/opt/spice/cspice"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug Configuration",
            "description": "Debug build with all debugging features enabled",
            "inherits": "base",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "BUILD_TESTING": "ON",
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0 -Wall -Wextra -pedantic",
                "CMAKE_C_FLAGS_DEBUG": "-g -O0 -Wall -Wextra -pedantic"
            }
        },
        {
            "name": "debug-asan",
            "displayName": "Debug with AddressSanitizer",
            "description": "Debug build with AddressSanitizer for memory error detection",
            "inherits": "debug",
            "binaryDir": "${sourceDir}/build/debug-asan",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0 -Wall -Wextra -pedantic -fsanitize=address -fno-omit-frame-pointer",
                "CMAKE_C_FLAGS_DEBUG": "-g -O0 -Wall -Wextra -pedantic -fsanitize=address -fno-omit-frame-pointer",
                "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address",
                "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=address"
            }
        },
        {
            "name": "release",
            "displayName": "Release Configuration",
            "description": "Optimized release build",
            "inherits": "base",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "BUILD_TESTING": "OFF",
                "CMAKE_CXX_FLAGS_RELEASE": "-O3 -DNDEBUG -march=native",
                "CMAKE_C_FLAGS_RELEASE": "-O3 -DNDEBUG -march=native"
            }
        },
        {
            "name": "relwithdebinfo",
            "displayName": "Release with Debug Info",
            "description": "Optimized build with debug symbols for profiling",
            "inherits": "base",
            "binaryDir": "${sourceDir}/build/relwithdebinfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "BUILD_TESTING": "ON",
                "CMAKE_CXX_FLAGS_RELWITHDEBINFO": "-O2 -g -DNDEBUG",
                "CMAKE_C_FLAGS_RELWITHDEBINFO": "-O2 -g -DNDEBUG"
            }
        },
        {
            "name": "coverage",
            "displayName": "Coverage Analysis",
            "description": "Debug build with coverage instrumentation",
            "inherits": "debug",
            "binaryDir": "${sourceDir}/build/coverage",
            "cacheVariables": {
                "CMAKE_CXX_FLAGS_DEBUG": "-g -O0 --coverage -fprofile-arcs -ftest-coverage",
                "CMAKE_C_FLAGS_DEBUG": "-g -O0 --coverage -fprofile-arcs -ftest-coverage",
                "CMAKE_EXE_LINKER_FLAGS": "--coverage",
                "CMAKE_SHARED_LINKER_FLAGS": "--coverage"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "displayName": "Build Debug"
        },
        {
            "name": "debug-asan",
            "configurePreset": "debug-asan",
            "displayName": "Build Debug with AddressSanitizer"
        },
        {
            "name": "release",
            "configurePreset": "release",
            "displayName": "Build Release"
        },
        {
            "name": "relwithdebinfo",
            "configurePreset": "relwithdebinfo",
            "displayName": "Build Release with Debug Info"
        },
        {
            "name": "coverage",
            "configurePreset": "coverage",
            "displayName": "Build for Coverage"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "displayName": "Test Debug",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "debug-asan",
            "configurePreset": "debug-asan",
            "displayName": "Test Debug with AddressSanitizer",
            "inherits": "debug",
            "environment": {
                "ASAN_OPTIONS": "detect_leaks=1:abort_on_error=1"
            }
        },
        {
            "name": "release",
            "configurePreset": "release",
            "displayName": "Test Release",
            "inherits": "debug"
        },
        {
            "name": "coverage",
            "configurePreset": "coverage",
            "displayName": "Test for Coverage",
            "inherits": "debug"
        }
    ]
}